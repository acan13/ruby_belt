<!DOCTYPE html>
<html>
<head>
  <title>LoginTemplate</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if current_user %>
    <div id="logged_in">
      <p>Welcome <a href="/users/<%= current_user.id %>"><%= current_user.first_name %> <%= current_user.last_name %></a></p>
      <p>
        <a href="/put_main_index_path_here">Home</a> |
        <a href="/users/<%= current_user.id %>/edit">Edit Profile</a> |
        <a data-method="delete" href="/sessions/destroy">Log Out</a>
      </p>
    </div>
  <% end %>

  <%= yield %>

  <% if flash[:errors] %>
    <% flash[:errors].each do |e| %>
      <p><%= e %></p>
    <% end %>
  <% end %>

</body>
</html>
